<div class="videos-section">
  <link rel="stylesheet" href="/css/style.css">
  <script src="/js/video.js" defer></script>
  <div class="header-section">
    <h2>Mes Vidéos</h2>
    <div class="header-buttons">
      <a href="/" class="btn home-btn">Retour à l'accueil</a>
    </div>
  </div>
  
  <% if (videos && videos.length > 0) { %>
      <div class="video-grid">
          <% videos.forEach(video => { %>
              <div class="video-card">
                  <div class="video-thumbnail">
                      <video src="/uploads/<%= video %>" preload="metadata"></video>
                      <div class="play-icon">▶</div>
                  </div>
                  <div class="video-info">
                      <h3><%= video.split('-').slice(1).join('-') %></h3>
                      <div class="video-actions">
                          <a href="/player/<%= video %>" class="btn play-btn">Regarder</a>
                      </div>
                  </div>
              </div>
          <% }); %>
      </div>
  <% } else { %>
      <div class="empty-state">
          <p>Aucune vidéo n'a été uploadée pour le moment.</p>
          <a href="/" class="btn">Ajouter une vidéo</a>
      </div>
  <% } %>
</div>